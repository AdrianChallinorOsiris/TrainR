[Unit]
Description=Train Set Control System
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi
ExecStart=/home/pi/train
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Grant access to GPIO, I2C, and SPI
SupplementaryGroups=gpio i2c spi

[Install]
WantedBy=multi-user.target
